<?xml version="1.0" encoding="utf-8" ?>
<ThingDefs>
<ThingDef ParentName="BuildingBase">
    <defName>CoalScuttle</defName>
    <label>coal scuttle</label>
    <thingClass>Building_Storage</thingClass>
    <graphicData>
      <texPath>Things/Building/Production/CoalScuttle</texPath>
      <graphicClass>Graphic_Single</graphicClass>
      <damageData>
        <rect>(0.05,0.1,0.9,0.9)</rect>
        <cornerTL>Damage/Corner</cornerTL>
        <cornerTR>Damage/Corner</cornerTR>
      </damageData>
    </graphicData>
    <altitudeLayer>Building</altitudeLayer>
    <passability>PassThroughOnly</passability>
    <fillPercent>0.5</fillPercent>
    <pathCost>70</pathCost>
	 <canOverlapZones>false</canOverlapZones>
    <building>
      <fixedStorageSettings>
        <priority>Important</priority>
        <filter>
		  <thingDefs>
            <li>WoodLog</li>
          </thingDefs>
		  <categories>
		    <li>Carbon</li>
		  </categories>
        </filter>
      </fixedStorageSettings>
      <defaultStorageSettings>
        <priority>Important</priority>
        <filter>
		  <thingDefs>
            <li>WoodLog</li>
          </thingDefs>
		  <categories>
		    <li>Carbon</li>
		  </categories>
		  <exceptedThingDefs>
            <li>WoodLog</li>
          </exceptedThingDefs>
        </filter>
      </defaultStorageSettings>
    </building>
    <inspectorTabs>
      <li>ITab_Storage</li>
    </inspectorTabs>
    <castEdgeShadows>true</castEdgeShadows>
    <statBases>
      <WorkToBuild>200</WorkToBuild>
      <MaxHitPoints>100</MaxHitPoints>
      <Flammability>1.0</Flammability>
    </statBases>
    <description>Holds resources for use by fueled generator.</description>
    <costList>
      <Steel>5</Steel>
    </costList>
    <tickerType>Never</tickerType>
    <rotatable>true</rotatable>
    <neverMultiSelect>true</neverMultiSelect>
    <designationCategory>Production</designationCategory>
    <staticSunShadowHeight>0.3</staticSunShadowHeight>
    <surfaceType>Item</surfaceType>
    <placeWorkers>
      <li>PlaceWorker_NextToHopperAccepter</li>
    </placeWorkers>
    <constructEffect>ConstructMetal</constructEffect>
  </ThingDef>
  </ThingDefs>